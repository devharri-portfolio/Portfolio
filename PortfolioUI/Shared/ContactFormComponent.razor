<form class="row justify-content-center">
    <div class="text-center">
        <p class="text-muted">Want to discuss about something? Love to hear from you, write me a message!</p>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <label for="firstNameContactForm" class="form-label">First name</label>
            <input type="text" class="form-control" id="firstNameContactForm" placeholder="First name" disabled>
        </div>
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            <label for="lastNameContactForm" class="form-label">Last name</label>
            <input type="text" class="form-control" id="lastNameContactForm" placeholder="Last name" disabled>
        </div>
    </div>
    <div class="col-md-12">
        <div class="mb-3">
            <label for="messageContactForm" class="form-label">Message</label>
            <textarea class="form-control" id="messageContactForm" placeholder="Message" rows="1" disabled></textarea>
        </div>
    </div>
    <div class="col-md-12">
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </div>
</form>
